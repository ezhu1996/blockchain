<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blockchain">

<!--   Mention Internet Permission required -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Lab6_Firebase"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.blockchain.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.blockchain.LoginActivity" />
        <activity android:name="com.example.blockchain.RegistrationActivity" />
        <activity android:name="com.example.blockchain.DashboardActivity"></activity>
        <activity android:name="com.example.blockchain.AuthorActivity"></activity>
    </application>

</manifest>